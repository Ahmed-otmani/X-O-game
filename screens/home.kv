#: import utils kivy.utils

<Home>:
	
	FloatLayout:
		canvas.before:
			Color:
				rgba: utils.get_color_from_hex("#847878")
			Rectangle:
				size: self.size
				pos: self.pos
		Label:
			pos_hint: {"center_x":.5, "top":.95}
			text: "Welcome To [size=45sp][color=#000000FF]X-O[/color][/size]"
			markup: True
			size_hint: [.80, .1]
			font_size: '40sp'
			bold: True
			color: [1,1,1,1]

		BoxLayout:
			orientation: "vertical"
			spacing: 10
			padding: 10
			size_hint_y: None
			height: self.minimum_height
			pos_hint: {"top": .8}
			Button:
				background_normal: ""
				color: [0,0,0,1]
				text: "soloplayer".upper()
				size_hint_y: None
				bold: True
				font_size: "25sp"
				height: 50
				on_release:
					app.change_screen('solo', 'up')
					app.execute_show_options("solo")
			Button:
				background_normal: ""
				color: [0,0,0,1]
				text: "multiplayer".upper()
				size_hint_y: None
				bold: True
				font_size: "25sp"
				height: 50
				on_release:
					app.change_screen('poly', 'up')
					app.execute_show_options("poly")

